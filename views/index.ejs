<script>
$(function(){
});

//. #44
function changePicture(){
  var nickname = window.prompt( '新しいプロフィール名を入力してください。', 'myname' );
  var pic_url = window.prompt( '新しいプロフィール画像の URL を入力してください。', 'https://4.bp.blogspot.com/-j6XAl3OK8ZM/U8XlT6m8w-I/AAAAAAAAi8w/M3tahu45qX8/s400/ojigi_animal_usagi.png' );
  if( nickname || pic_url ){
    var body = { nickname: nickname, picture: pic_url };
    $.ajax({
      url: '/image',
      type: 'post',
      contentType: 'application/json',
      data: JSON.stringify( body ),
      success: function( result ){
        console.log( { result } );
        alert( '一度ログアウトするので、再度ログインしてください' );
        location.href = '/auth0/logout';
      },
      error: function( e0, e1, e2 ){
        console.log( e0, e1, e2 );
      }
    });
  }
}

function timestamp2datetime( ts ){
  if( ts ){
    var dt = new Date( ts );
    var yyyy = dt.getFullYear();
    var mm = dt.getMonth() + 1;
    var dd = dt.getDate();
    var hh = dt.getHours();
    var nn = dt.getMinutes();
    var ss = dt.getSeconds();
    var datetime = yyyy + '-' + ( mm < 10 ? '0' : '' ) + mm + '-' + ( dd < 10 ? '0' : '' ) + dd
      + ' ' + ( hh < 10 ? '0' : '' ) + hh + ':' + ( nn < 10 ? '0' : '' ) + nn + ':' + ( ss < 10 ? '0' : '' ) + ss;
    return datetime;
  }else{
    return "";
  }
}
</script>
